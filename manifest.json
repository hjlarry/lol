{
  "manifest_version": 2,
  "name": "LOL",
  "version": "1.0",
  "description": "查看LOL相关消息",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "*://*.chrome.com/",
    "webRequest",
    "*://*.baidu.com/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "英雄联盟",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}